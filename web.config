<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <rewrite>
            <rules>
                <!-- ПРАВИЛО 1: WebSocket Прокси -->
                <!-- Важно: это правило должно быть первым -->
                <rule name="WebSocket Proxy" stopProcessing="true">
                    <match url="^api/ws" />
                    <action type="Rewrite" url="http://localhost:8091/api/ws" />
                    <serverVariables>
                        <set name="HTTP_SEC_WEBSOCKET_EXTENSIONS" value="" />
                    </serverVariables>
                </rule>

                <!-- ПРАВИЛО 2: API Прокси -->
                <!-- Все запросы, начинающиеся с /api/, отправляем на localhost:8091 -->
                <rule name="ReverseProxyInboundRule1" stopProcessing="true">
                    <match url="^api/(.*)" />
                    <action type="Rewrite" url="http://localhost:8091/api/{R:1}" />
                </rule>
                
                <!-- ПРАВИЛО 3: Доступ к загруженным файлам (аватарки и т.д.) -->
                <!-- Если Go отдает файлы по /uploads/, тоже проксируем туда -->
                <rule name="Uploads Proxy" stopProcessing="true">
                    <match url="^uploads/(.*)" />
                    <action type="Rewrite" url="http://localhost:8091/uploads/{R:1}" />
                </rule>

                <!-- ПРАВИЛО 4: Фронтенд (SPA Routing) -->
                <!-- Если запрашиваемый файл не существует на диске, отдаем index.html -->
                <!-- Это нужно для React/Vue, чтобы при обновлении страницы она не ломалась -->
                <rule name="React-Vue-Routing" stopProcessing="true">
                    <match url=".*" />
                    <conditions logicalGrouping="MatchAll">
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <!-- Исключаем API, чтобы они не попали сюда -->
                        <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="/index.html" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- Добавляем поддержку json и других типов файлов, если IIS их не знает -->
        <staticContent>
            <remove fileExtension=".json" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <remove fileExtension=".woff" />
            <mimeMap fileExtension=".woff" mimeType="font/woff" />
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
        </staticContent>
    </system.webServer>
</configuration>
